<h1> Report for Batch</h1>
<table class="table table-striped clearance_batches">
  <thead>
    <tr>
      <th> Clearanced Batch ID </th>
      <th> Item Number </th>
      <th> Status </th>
      <th> Created At </th>
      <th> Updated At</th>
      <th> Size </th>
      <th> Color </th>
      <th> Price Sold </th>
      <th> Sold At </th>
      <th> Style ID </th>
    </tr>
  </thead>
  <tbody>
    <%- @items.each do |item| -%>
      <tr>
        <td> # <%= item.clearance_batch_id %></td>
        <td> # <%= item.id %></td>
        <td><%= item.status %></td>
        <td><%= l(item.created_at, format: :short) %></td>
        <td><%= l(item.updated_at, format: :short) %></td>
        <td><%= item.size %></td>
        <td><%= item.color %></td>
        <td><%= item.price_sold %></td>
        <td><%= item.sold_at %></td>
        <td><%= item.style_id %></td>
      </tr>
    <%- end -%>
  </tbody>
</table>


<span> <%= link_to 'Home', '/' %> </span>
<span> <%= link_to 'Back', :back %> </span>