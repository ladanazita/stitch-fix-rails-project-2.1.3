<h1> Item List </h1>
<h4> Enter Clearance Batch Number or Item Status </h4>
<div class="search">
  <%= form_tag(items_path, :method => 'get', class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Status or Batch #" %>
      <%= button_tag 'Search', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
<div class="back">
  <%= link_to 'Back', :back %>
</div>
<table class="table table-striped clearance_batches">
  <thead>
    <tr>
      <th>Item Number</th>
      <th>Batch Number</th>
      <th> Status </th>
      <th> Price Sold </th>
      <th> Wholesale Price </th>
      <th> Style </th>
    </tr>
  </thead>
  <tbody>
    <%- @items.each do |item| -%>
      <tr>
        <td> # <%= item.id %></td>
        <td> <%= item.clearance_batch_id %></td>
        <td><%= item.status %></td>
        <td><%= item.price_sold %></td>
        <td><%= item.style.retail_price %></td>
        <td><%= item.style.type %></td>
      </tr>
    <%- end -%>
  </tbody>
</table>
<div class="flickr_pagination">
    <div class="page_info">
      <%= page_entries_info @items %>
    </div>
  <%= will_paginate @items, :container => false %>
</div>