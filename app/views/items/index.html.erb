<h1> Item List </h1>
<p>
  <%= form_tag(items_path, :method => 'get', class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search" %>
      <%= button_tag 'Search', class: 'btn btn-primary' %>
    </div>
  <% end %>
</p>

<table class="table table-striped clearance_batches">
  <thead>
    <tr>
      <th>Item Number</th>
      <th>Batch Number</th>
      <th> Status </th>
      <th> Price Sold </th>
      <th> Wholesale Price </th>
      <th> Style </th>
    </tr>
  </thead>
  <tbody>
    <%- @items.each do |item| -%>
      <tr>
        <td> # <%= item.id %></td>
        <td> <%= item.clearance_batch_id %></td>
        <td><%= item.status %></td>
        <td><%= item.price_sold %></td>
        <td><%= item.style.retail_price %></td>
        <td><%= item.style.type %></td>
      </tr>
    <%- end -%>
  </tbody>
</table>
<span> <%= will_paginate @items %> </span>
<br />
<span> <%= link_to 'Home', '/' %> </span>
<span> <%= link_to 'Back', :back %> </span>