<h1> Item List </h1>
<p>
  <%= form_tag(items_path, :method => 'get', class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search By Status" %>
      <%= button_tag 'Search', class: 'btn btn-primary' %>
    </div>
  <% end %>
</p>

<table class="table table-striped clearance_batches">
  <thead>
    <tr>
      <th>Item Number</th>
      <th> Status </th>
      <th> Created At </th>
      <th> Updated At</th>
      <th> Size </th>
      <th> Color </th>
      <th> Price Sold </th>
      <th> Sold At </th>
      <th> Style ID </th>
    </tr>
  </thead>
  <tbody>
    <%- @items.each do |item| -%>
      <tr>
        <td> # <%= item.id %></td>
        <td><%= item.status %></td>
        <td><%= l(item.created_at, format: :short) %></td>
        <td><%= l(item.updated_at, format: :short) %></td>
        <td><%= item.size %></td>
        <td><%= item.color %></td>
        <td><%= item.price_sold %></td>
        <td><%= item.sold_at %></td>
        <td><%= item.style_id %></td>
      </tr>
    <%- end -%>
  </tbody>
</table>
<span> <%= will_paginate @items %> </span>
<br />
<span> <%= link_to 'Home', '/' %> </span>
<span> <%= link_to 'Back', :back %> </span>